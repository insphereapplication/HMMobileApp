<div id="pageTitle">
    <h1>New Task</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @task.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Activity type: </td>
    			  <td class="itemValue"><input type="text" name="task[activity_type]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Subject: </td>
    			  <td class="itemValue"><input type="text" name="task[subject]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Follow up date: </td>
    			  <td class="itemValue"><input type="text" name="task[follow_up_date]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Start time: </td>
    			  <td class="itemValue"><input type="text" name="task[start_time]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">End time: </td>
    			  <td class="itemValue"><input type="text" name="task[end_time]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>