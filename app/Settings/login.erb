<% @login = true %>
<div data-role="page" data-theme="b" id="jqm-home">
    <div data-role="header" data-backbtn="false">
        <h1><img src="/public/images/logo.png" alt="Login" /></h1>
    </div>

    <div data-role="content">
		 <form method="POST" action="<%= url_for :action => :do_login %>">
		   <% if @msg %>
		       <p style="color: red"><%= @msg %></p>
		   <% end %>
	       <ul data-role="listview" data-inset="true">
	           <li>
					<div data-role="fieldcontain" style="border: none">
		       			<label for="login" style="display: inline">Login</label>
		       			<input type="text" name="login" id="login" value="<%= Settings.login %>" />
					</div>
				</li>
				<li>
					<div data-role="fieldcontain" style="border: none">
						 <label for="password" style="display: inline">Password</label>
	                     <input type="password" name="password" id="password" value="<%= Settings.password %>"  />
					</div>
		     	</li>
		   </ul>
		   <input type="submit" class="standardButton" value="Login"/>
		 </form>
		<div class="login_progress" style="margin-top:30px;font-size:10px;"><% if @working %>Logging In<% end %></div>
	</div>
</div>

<script type="text/javascript">
  function update_wait_progress(text) {
	var htmlText = text.replace("\n", "<br/>")
    
    $('div.login_progress').html(htmlText);    
  }
</script>
