<% @login = true %>
<div data-role="page" data-theme="b" id="jqm-home">
	<%= offline_bar%>
    <div data-role="header" data-backbtn="false" data-theme="b">
        <h1><img src="/public/images/logo.png" alt="Login" /></h1>
    </div>

    <div data-role="content" data-theme="b">
		 <form method="POST" action="<%= url_for :action => :do_login %>">
		   <% if @msg %>
		       <p style="color: red"><%= @msg %></p>
		   <% end %>
			<div data-role="fieldcontain" >
       			<label for="login" >Login</label>
       			<input type="text" name="login" data-theme="d" id="login" value="<%= Settings.login %>" />
			</div>
	
			<div data-role="fieldcontain" >
				 <label for="password" >Password</label>
                  <input type="password" name="password" data-theme="d" id="password" value="<%= Settings.password %>"  />
			</div>
		   <input type="submit" class="standardButton" value="Login"/>
		 </form>
		<div class="login_progress" style="margin-top:30px;font-size:10px;"><% if @working %>Logging In<% end %></div>
	</div>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
</div>

<script type="text/javascript">
  function update_wait_progress(htmlText) {    
    $('div.login_progress').html(htmlText);    
  }
</script>
