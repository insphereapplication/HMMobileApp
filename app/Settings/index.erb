					<h3><a href="<%= url_for :action => :login %>">Login</a></h3>
					<% end %>
				</li>
				<li>
					<img src="/public/images/logo_icon_small.png" class="ui-li-icon" style="margin-top:8px">
					<h3><a href="<%= url_for :action => :pin %>">Reset PIN</a></h3>
				</li>
				<li>
