<div data-role="page" data-theme="b" data-cache="never">
	<div data-role="header" data-theme="b">
		<a href="/app/Settings/about" data-direction="reverse" data-icon="back">About</a>
		<h1>Configure Log <%= sync_spinner %></h1>
	</div>
	<form method="post" id="logSubmitForm" action="<%= url_for(:action => :save_log_config) %>">
		<div id="contentDiv" data-role="content" data-theme="b">
			<ul data-role="listview" data-inset="true" data-theme="d">
				<li><h3>MinSeverity:</h3><input name="minSeverity" value="<%= RhoConf.get_property_by_name('MinSeverity') %>" /></li> 
				<li><h3>Log File Size (in bytes):</h3><input name="logFileSize" value="<%= RhoConf.get_property_by_name('MaxLogFileSize') %>" /></li>
			</ul>
			<input type="submit" id="logSubmit" value="Save Changes" />
		<div>
	</form>
</div>
