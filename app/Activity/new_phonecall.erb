<div data-role="page" data-theme="b" id="new_phonecall">
	<script type='text/javascript'>	
		function PickCallChangeFocus() {
			popupTomorrowDateTimeAJPicker('0', 'Start Time:', 'callback_datetime');
			document.getElementById('callback_datetime').focus();
		}
	</script>
	<%= offline_bar%>
       <div data-role="header" data-theme="b" data-position="inline">
           <a href="<%= url_for(:action => :index)%>" rel="external" data-role="button" data-icon="back">Cancel</a>
           <h1>Create Activity <%= sync_spinner %></h1>
       </div>
       <div id="contentDiv" data-role="content" data-theme="b">
		<form name="new_phonecall_form" id="new_phonecall_form" method="POST" action="<%= url_for :action => :create_new_phonecall %>">
          	<div data-role="navbar">
                <ul>
                    <li><a href="<%= url_for(:action => :new_task)%>"  data-theme="d">Task</a></li>
                    <li><a href="<%= url_for(:action => :new_phonecall)%>" class="ui-btn-active" data-theme="d">Phone Call</a></li>
                    <li><a href="<%= url_for(:action => :new_appointment)%>" data-theme="d">Appointment</a></li>
                </ul>
            </div>
			<div data-role="fieldcontain">
				<label for="phonecall_subject">Subject:<font color="red"> *</font></label>
				<input id="phonecall_subject" type="text" name="phonecall_subject" data-theme="d"></input>
			</div>
			<div data-role="fieldcontain">
				<label for="callback_datetime">Callback Date and Time: <font color="red"> *</font></label>
				<input id="callback_datetime" type="text" name="callback_datetime" data-theme="d" readonly value="<%= $choosed['0'] %>"  onClick="PickCallChangeFocus();"></input>
			</div>
			<div data-role="fieldcontain">
				<label for="phonecall_number">Phone Number: <font color="red"> *</font></label>
				<input type="tel" id="phonecall_number" value="" name="phonecall_number" data-theme="d" ></input>
			</div>
			<div data-role="fieldcontain">
				<fieldset data-role="controlgroup">
					<legend>Priority:</legend>
					<input type="checkbox" name="callback_priority_checkbox" data-theme="d" id="callback_priority_checkbox" class="custom"/>
					<label for="callback_priority_checkbox">
					<img src="/public/images/red_exclamation.png" style="width: 16px; height: 16px;" />High
					</label>
				</fieldset>
			</div>
			<input type="submit"  value="Create Callback" data-theme="b"/>
		</form>
	</div>
</div>

