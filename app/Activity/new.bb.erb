<div id="pageTitle">
    <h1>New Activity</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @activity.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Type: </td>
    			  <td class="itemValue"><input type="text" name="activity[type]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Parent: </td>
    			  <td class="itemValue"><input type="text" name="activity[parent_id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Parent type: </td>
    			  <td class="itemValue"><input type="text" name="activity[parent_type]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Activityid: </td>
    			  <td class="itemValue"><input type="text" name="activity[activityid]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Statecode: </td>
    			  <td class="itemValue"><input type="text" name="activity[statecode]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Statuscode: </td>
    			  <td class="itemValue"><input type="text" name="activity[statuscode]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Scheduledstart: </td>
    			  <td class="itemValue"><input type="text" name="activity[scheduledstart]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Scheduledend: </td>
    			  <td class="itemValue"><input type="text" name="activity[scheduledend]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>