<div id="pageTitle">
		<h1>Edit <%= @activity.type%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @activity.object %>
    <%= link_to "Delete", :action => :delete, :id => @activity.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @activity.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Type: </td>
              			<td class="itemValue"><input type="text" name="activity[type]" value="<%= @activity.type %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Parent: </td>
              			<td class="itemValue"><input type="text" name="activity[parent_id]" value="<%= @activity.parent_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Parent type: </td>
              			<td class="itemValue"><input type="text" name="activity[parent_type]" value="<%= @activity.parent_type %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Activityid: </td>
              			<td class="itemValue"><input type="text" name="activity[activityid]" value="<%= @activity.activityid %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Statecode: </td>
              			<td class="itemValue"><input type="text" name="activity[statecode]" value="<%= @activity.statecode %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Statuscode: </td>
              			<td class="itemValue"><input type="text" name="activity[statuscode]" value="<%= @activity.statuscode %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Scheduledstart: </td>
              			<td class="itemValue"><input type="text" name="activity[scheduledstart]" value="<%= @activity.scheduledstart %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Scheduledend: </td>
              			<td class="itemValue"><input type="text" name="activity[scheduledend]" value="<%= @activity.scheduledend %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
