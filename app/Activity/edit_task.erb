<div data-role="page" data-theme="b" id="task_edit_page">
	<form name="task_edit_form" method="POST" action="<%= url_for :action => :update_task, :id =>@activity.object, :query => {:origin => @params['origin']} %>">
	<%= offline_bar%>
		<div data-role="header" data-theme="b" data-position="inline">
			<a href="<%=url_for(:action=>:show, :id => @activity.object, :query =>{:origin => @params['origin'], :activity => @activity.object})%>" data-direction="reverse" rel="external" data-icon="back">Cancel</a>
			<h1>Edit Task <%= sync_spinner %></h1>
			<input type="submit" data-theme="b" class="ui-btn-right" value="Update"/>
		</div>
		<% if (@activity.parent_contact) %>
			<div style="text-align:center" class="ui-bar"> 
				<h1><%= 
					parent_contact = @activity.parent_contact
					parent_contact ? parent_contact.full_name : ''
				 %></h1>
			</div>
			<hr/>
		<% end %>
		<div id="contentDiv" data-role="content">
   			<div data-role="fieldcontain">
  	         	<label for="task_due_datetime" class="fieldLabel">Due Date:</label>
				<input id="task_due_datetime" type="text" name="task[due_datetime]" data-theme="d" readonly value="<%= to_datetime(@activity.scheduledend) %>"  onClick="editpopupDateTimeAJPicker('0', 'Task Time', 'task_due_datetime', '<%= @activity.scheduledend %>'); document.getElementById('task_due_datetime').focus();"/>
   			</div>
 		    <div data-role="fieldcontain">
  			  	<label for="task_description" class="fieldLabel">Description:</label>
				<textarea cols="40" rows="8" name="task[description]" data-theme="d" id="task_description"><%= @activity.description %></textarea>
   			</div>
	        <div data-role="fieldcontain">
				<fieldset data-role="controlgroup">
					<legend>Priority:</legend>
					<input id="task_priority_checkbox" type="checkbox" name="task[high_priority_checkbox]" data-theme="d" class="custom" <%= @activity.prioritycode == 'High' ? 'checked' : '' %> />
					<label for="task_priority_checkbox">
								<img src="/public/images/red_exclamation.png"/>High
					</label>
				</fieldset>
   			</div>
			<input type="submit" data-theme="b" class="standardButton" value="Update" data-theme="b"/>
	</form>
</div>

