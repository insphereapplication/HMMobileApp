<div id="pageTitle">
		<h1>Edit <%= @contact.first_name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @contact.object %>
    <%= link_to "Delete", :action => :delete, :id => @contact.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @contact.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">First name: </td>
              			<td class="itemValue"><input type="text" name="contact[first_name]" value="<%= @contact.first_name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Last name: </td>
              			<td class="itemValue"><input type="text" name="contact[last_name]" value="<%= @contact.last_name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">City: </td>
              			<td class="itemValue"><input type="text" name="contact[city]" value="<%= @contact.city %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">State: </td>
              			<td class="itemValue"><input type="text" name="contact[state]" value="<%= @contact.state %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Zip: </td>
              			<td class="itemValue"><input type="text" name="contact[zip]" value="<%= @contact.zip %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Phone: </td>
              			<td class="itemValue"><input type="text" name="contact[phone]" value="<%= @contact.phone %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Sex: </td>
              			<td class="itemValue"><input type="text" name="contact[sex]" value="<%= @contact.sex %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Date of birth: </td>
              			<td class="itemValue"><input type="text" name="contact[date_of_birth]" value="<%= @contact.date_of_birth %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
