<script type="text/javascript" >
	$(document).ready(function() {
		$.ajaxSetup ({  
			cache: false  
		});
		loadPage();
	});
</script>

<div data-role="page" data-theme="b" data-url="" class="ui-page ui-body-b ui-page-active"> 
	<%= offline_bar %>
	<div data-role="header" data-backbtn="false" class="ui-bar-b ui-header" role="banner"> 
		<a href="<%= url_for :action => :new, :query => {:origin => 'contact'} %>" data-icon="plus" data-transition="none" data-theme="b" class="ui-btn-left ui-btn ui-btn-icon-left ui-btn-corner-all ui-shadow ui-btn-up-b">
			<span class="ui-btn-inner ui-btn-corner-all"><span class="ui-btn-text">Create</span><span class="ui-icon ui-icon-plus ui-icon-shadow"></span></span>
		</a>
		<h1 class="ui-title" tabindex="0" role="heading" aria-level="1">Contacts</h1>
		<a href="<%=url_for(:action=>:search_AC, :query => {:origin => 'contact'})%>" data-direction="forward" class="ui-btn-right ui-btn ui-btn-corner-all ui-shadow ui-btn-up-b">
			<span class="ui-btn-inner ui-btn-corner-all"><span class="ui-btn-text">Search AC</span><span class="ui-icon ui-icon-shadow"></span></span>
		</a> 
	</div>

	<div id="plus" data-collapsed="true" class="ui-collapsible-contain">
		<h3 class="ui-collapsible-custom-heading ui-collapsible-heading-collapsed">
			<a href="javascript:;" onmousedown="toggleDiv('filter'); toggleDiv('minus'); toggleDiv('plus');" class="ui-btn ui-btn-icon-left ui-shadow ui-corner-all ui-btn-up-b" data-theme="b">
				<span class="ui-btn-inner ui-corner-all">
					<span class="ui-btn-text" id="para">
						Filters
						<span class="ui-collapsible-heading-status">click to expand contents</span>
					</span>
					<span data-theme="d" class="ui-btn ui-btn-up-d ui-btn-icon-left ui-btn-corner-all ui-shadow">
						<span class="ui-btn-inner ui-btn-corner-all ui-corner-all">
							<span class="ui-btn-text"/>
							<span class="ui-icon ui-icon-plus ui-icon-shadow"/>
						</span>
					</span>
				</span>
			</a>
		</h3>
	</div>
	
	<div id="minus" style="display:none;" data-role="collapsible" data-collapsed="true" class="ui-collapsible-contain">
		<h3 class="ui-collapsible-custom-heading ui-collapsible-heading-collapsed">
			<a href="javascript:;" onmousedown="toggleDiv('filter'); toggleDiv('plus'); toggleDiv('minus');" class="ui-collapsible-heading-toggle ui-btn ui-btn-icon-left ui-shadow ui-corner-all ui-btn-up-b" data-theme="b">
				<span class="ui-btn-inner ui-corner-all">
					<span class="ui-btn-text">
						Filters
						<span class="ui-collapsible-heading-status">click to expand contents</span>
					</span>
					<span data-theme="d" class="ui-btn ui-btn-up-d ui-btn-icon-left ui-btn-corner-all ui-shadow">
						<span class="ui-btn-inner ui-btn-corner-all ui-corner-all">
							<span class="ui-btn-text"/>
							<span class="ui-icon ui-icon-minus ui-icon-shadow"/>
						</span>
					</span>
				</span>
			</a>
		</h3>
	</div>
	<form name="contact_filter_form" id="contact_filter_form">	
		<div id="filter" style="display:none;" data-role="none">
			<select style="-webkit-backface-visibility:visible" class="ui-custom-dropdown" name="contact_filter" id="contact_filter" tabindex="-1">
				<option class="ui-btn-text" data-placeholder="true" selected="true" value="all">All</option>
				<option class="ui-btn-text" value="active-policies">Contacts with Active Policies</option>
				<option class="ui-btn-text" value="pending-policies">Contacts with Pending Policies</option>
				<option class="ui-btn-text" value="open-opps">Contacts with Open Opportunities</option>
				<option class="ui-btn-text" value="won-opps">Contacts with Won Opportunities</option>
			</select>
			<label for="search_input" class="fieldLabel ui-input-text"> &nbsp;&nbsp;&nbsp;&nbsp;Search: </label>
			<input type="text" id="search_input" name="search_input" maxlength="30" class="ui-search-text ui-body-null ui-corner-all"></input>
			<fieldset class="ui-grid-custom ui-grid-a">
				<div class="ui-block-a">
					<div data-theme="b" class="ui-btn ui-btn-corner-all ui-shadow ui-btn-up-b">
						<span class="ui-btn-inner ui-btn-corner-all">
							<span class="ui-btn-text">Filter</span>
						</span>
						<input id="submit-search-button" class="standardButton ui-btn-hidden validateSearchFilter" data-theme="b"/>
					</div>
				</div>
				<div class="ui-block-b">
					<div data-theme="b" class="ui-btn ui-btn-corner-all ui-shadow ui-btn-up-b">
						<span class="ui-btn-inner ui-btn-corner-all">
							<span class="ui-btn-text">Clear</span>
						</span>
						<a type="button" data-theme="b" href="" class="ui-btn-hidden ui-link"></a>
					</div>
				</div>
			</fieldset>
		</div>
	</form>	  	
	<div class="ui-content contacts-list" data-role="none" role="main">
		<ul id="contact-list" data-role="listview" data-counttheme="e" class="ui-listview" role="listbox"></ul>
	</div>
	<a name="bottom"></a>
</div>
