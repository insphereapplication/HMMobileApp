<div data-role="page" data-theme="b" id="spouse_new_page">
	<form method="post" id="spouse_form" action="<%= url_for(:controller => :Contact, :action => :spouse_update, :query => {:opportunity => @params['opportunity'], :origin => @params['origin']})%>" name="spouse_add">
		<div data-role="header" data-backbtn="false" data-theme="b">
			<a href="<%=url_for(:controller=>:Contact, :action=>:show, :id => @contact.object, :query=>{:origin => @params['origin'], :opportunity => @params['opportunity'] })%>" data-direction="reverse" rel="external" data-icon="back">Back</a>
			<h1>Add Spouse</h1>
			<span class="ui-btn-right">
				<input type="submit" href="#" data-theme="b" data-direction="reverse" value="Done"/>
			</span>
		</div>
		<div id="contentDiv" data-role="content">
			<input type="hidden" name="id" value="<%= @contact.object %>"/>
			<div data-role="fieldcontain">
				<div class="ui-body ui-body-d">
					<label for="contact[cssi_spousename]" class="fieldLabel">First Name:<font color="red">  *</font></label>
					<input type="text" maxlength="100" id="contact[cssi_spousename]" name="contact[cssi_spousename]" value="" />
				</div>
			</div>
			<div data-role="fieldcontain">
				<div class="ui-body ui-body-d">
					<label for="contact[cssi_spouselastname]" class="fieldLabel">Last Name:</label>
					<input type="email" maxlength="100" id="contact[cssi_spouselastname]" name="contact[cssi_spouselastname]" value="" />
				</div>
			</div>
			<div data-role="fieldcontain">
				<div class="ui-body ui-body-d">
					<label for="contact[cssi_spouseheightft]" class="fieldLabel">Height:</label>
					<select name="contact[cssi_spouseheightft]" data-role="none" id="contact[cssi_spouseheightft]">
						<option value=""></option>
						<% (0..10).each do |i| %>
							<option value="<%= i %>"><%= i %></option>
						<% end %>				
					</select>'&nbsp;
					<select name="contact[cssi_spouseheightin]" data-role="none" id="contact[cssi_spouseheightin]">
						<option value=""></option>
						<% (0..12).each do |i| %>
							<option value="<%= i %>"><%= i %></option>
						<% end %>
					</select>"
				</div>
			</div>
			<div data-role="fieldcontain">
				<div class="ui-body ui-body-d">
					<label for="contact[cssi_spouseweight]" class="fieldLabel">Weight (lbs):</label>
					<input type="number" id="contact[cssi_spouseweight]" name="contact[cssi_spouseweight]" value="" />					
				</div>
			</div>
			<div data-role="fieldcontain">
				<div class="ui-body ui-body-d">
					<label for="contact[cssi_spousebirthdate]" class="fieldLabel">Date of Birth:</label>
					<input id="contact[cssi_spousebirthdate]" type="text" name="contact[cssi_spousebirthdate]" readonly value="<%= $choosed['0'] %>"  onClick="popupBirthDateAJPicker('1', 'Spouse Birth Date', 'contact[cssi_spousebirthdate]'); document.getElementById('contact[cssi_spousegender]').focus();"></input>
				</div>
			</div>
			<div data-role="fieldcontain">
				<div class="ui-body ui-body-d">
					<label for="contact[cssi_spousegender]" class="fieldLabel">Gender:</label>
					<select name="contact[cssi_spousegender]" data-role="none" id="contact[cssi_spousegender]">
						<option value=""></option>
						<option value="Male">Male</option>
						<option value="Female">Female</option>
					</select>
				</div>
			</div>
			<div data-role="fieldcontain">
				<div class="ui-body ui-body-d">
					<label for="tobaccoSlider" class="fieldLabel">Tobacco:</label>
					<select name="contact[cssi_spouseusetobacco]" id="tobaccoSlider" data-role="slider">
						<option value="False">No</option>
						<option value="True">Yes</option>						
					</select>
				</div>
			</div>			
			<input type="submit" href="#" data-theme="b" data-direction="reverse" value="Done"/>
		</div>
	</form>
</div>