<div data-role="page" data-theme="b">
	<div data-role="header" data-theme="d" data-position="inline">
		<a href="<%=url_for(:action=>:show, :id => @opportunity.object)%>" data-direction="reverse" rel="external" data-icon="back">Back</a>
		<h1>Activity Summary</h1>
		<div style="text-align:center" class="ui-bar ui-bar-c"> 
			<%= "#{@opportunity.contact.full_name} - #{to_date(@opportunity.createdon)}" %>
		</div>
	</div>
	<div id="contentDiv" data-role="content">
		<ul data-role="listview" data-filter="false" data-inset="false">
			<% @activities.each do |activity|%>
				<li>
					<h3> <%= activity.type activity.cssi_statusdetail %></h3>
					<p><%= activity.cssi_statusdetail %></p>
					<p class="ui-li-aside"><strong><%= to_datetime(activity.scheduledend) %></strong></p>
				</li>
			<% end %>
		</ul>
	</div>
</div>