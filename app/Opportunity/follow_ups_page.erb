<% if @params['page']=='0'%>
	<li id="todays-leads-header" data-role="list-divider" role="heading" tabindex="0" class="opportunity-item ui-li ui-li-divider ui-btn ui-bar-<%= @color %> ui-btn-up-undefined"><%= @label %></li>
<% end %>
<% @page.each do |phone_call| %>
<% opportunity = phone_call.opportunity %>
    <% contact = opportunity.contact %>
	<%= render :partial =>"opportunity", :back => 'callback:', :locals => { 
		   	:opportunity => opportunity, 
			:contact => contact,
		    :color => @color, 
		    :top_right_text => opportunity.cssi_statusdetail,
		    :bottom_right_text => @date_proc.call(phone_call),
		    :origin => "follow-ups",
		    :launcher => :phone_dialog,
		    :icon => "phoneopp",
		    :location => "blank"
	   } if contact 
	%>
<% end%>