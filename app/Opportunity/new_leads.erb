<div class="ui-page ui-body-b ui-page-active" data-role="page">
	<div data-nobackbtn="true" data-role="header" class="ui-bar-b ui-header" role="banner">
		<h1 class="ui-title" tabindex="0" role="heading" aria-level="1">Opportunities</h1>
	</div>
	<div data-role="navbar" class="ui-navbar ui-navbar-noicons" role="navigation">
		<ul class="ui-grid-b">
			<li class="ui-block-a"><a class="ui-btn ui-btn-active ui-btn-up-a" data-transition="none" data-theme="a" href="opportunities_newleads_v2.html"><span class="ui-btn-inner"><span class="ui-btn-text">New Leads</span></span></a></li>
			<li class="ui-block-b"><a data-transition="none" data-theme="a" href="opportunities_followup_v2.html" class="ui-btn ui-btn-up-a"><span class="ui-btn-inner"><span class="ui-btn-text">Follow-Up</span></span></a></li>
			<li class="ui-block-c"><a data-transition="none" data-theme="a" href="opportunities_appt_v2.html" class="ui-btn ui-btn-up-a"><span class="ui-btn-inner"><span class="ui-btn-text">Appts</span></span></a></li>
		</ul>
	</div>
	<div data-role="content" class="ui-content" role="main">
		<ul data-counttheme="e" data-split-theme="b" data-split-icon="phoneopp" data-role="listview" class="ui-listview" role="listbox">
			<li data-role="list-divider" role="heading" tabindex="0" class="ui-li ui-li-divider ui-btn ui-bar-b ui-btn-up-undefined">Today</li> 
			<% @new_leads.each do |lead| %>
			<%= render :partial =>"opportunity", :locals => { :opportunity => lead, :color => color, :date_label => "Created #{lead.days_ago}"} %>
			
			<li role="option" tabindex="-1" data-theme="c" class="ui-btn ui-btn-icon-right ui-li ui-li-has-alt ui-btn-up-c">
				<div class="ui-btn-inner">
					<div class="ui-btn-text">
						<p class="ui-li-aside ui-li-desc"><strong>2/14/11 10:05 AM</strong></p>
						<h3 class="ui-li-heading"><a href="opportunity_detail_v2.html" class="ui-link-inherit"><%= lead.contact.full_name %></a></h3>
						<p class="ui-li-desc"></p>
						<div class="ui-grid-a ui-li-desc">
							<div class="ui-block-a"><%= "#{lead.contact.gendercode} #{lead.contact} - Plano, TX" %></div>
							<div align="right" class="ui-block-b">Created: Today</div>
						</div>
						<a href="tel:<%= lead.contact.mobilephone %>" title="Details" class="ui-li-link-alt ui-btn ui-btn-up-c" data-theme="c"><span class="ui-btn-inner"><span class="ui-btn-text"></span><span title="" data-theme="b" class="ui-btn ui-btn-up-b ui-btn-icon-notext ui-btn-corner-all ui-shadow"><span class="ui-btn-inner ui-btn-corner-all"><span class="ui-btn-text"></span><span class="ui-icon ui-icon-phoneopp ui-icon-shadow"></span></span></span></span></a>				
					</div>
				</div>
			</li>
			
			<li role="option" tabindex="0" data-theme="c" class="ui-btn ui-btn-icon-right ui-li ui-li-has-alt ui-btn-up-c">
				<a class="ui-li-sidebar-<%=color%> ui-btn-up-c"> </a> 
				<div class="ui-btn-inner">
					<div class="ui-btn-text">
						<p class="ui-li-aside ui-li-desc"><strong>~Rollup Status</strong></p>
						<h3 class="ui-li-heading"><a href="opportunity_detail_v2.html" class="ui-link-inherit ui-block-a"><%= contact.full_name %></a></h3>
						<p class="ui-li-desc"></p>
						<div class="ui-grid-a ui-li-desc">
							<div class="ui-block-a"><%= contact.age_sex_loc %></div>
							<div align="right" class="ui-block-b"><%= date_label %> #d</div>
						</div>
					</div>
				</div>
				<div class="ui-li-count ui-btn-up-e ui-btn-corner-all" style="top:70%;right:45%">Call Ct</div>
				<a href="tel:<%= contact.mobilephone %>" title="Details" class="ui-li-link-alt ui-btn ui-btn-up-c" data-theme="c"><span class="ui-btn-inner"><span class="ui-btn-text"></span><span title="" data-theme="b" class="ui-btn ui-btn-up-b ui-btn-icon-notext ui-btn-corner-all ui-shadow"><span class="ui-btn-inner ui-btn-corner-all"><span class="ui-btn-text"></span><span class="ui-icon ui-icon-phoneopp ui-icon-shadow"></span></span></span></span></a>			
			</li>
			
			<% end %>
		</ul>
	</div>
</div>
