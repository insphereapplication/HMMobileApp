<div data-role="page" data-theme="b" data-cache="never">
	<div data-role="header" data-backbtn="false">
		<%= opp_detail_backbutton(@params['origin']) %>
		<h3>Opportunity</h3>
		<div data-role="controlgroup" data-type="horizontal" class="ui-btn-right" style="margin-top:-1px;">
	       	<a href="<%= url_for(:action=>:show, :id=>@prev_id) %>"  data-icon="arrow-u" data-iconpos="left" data-role="button">&nbsp;</a>
	       	<a href="<%= url_for(:action=>:show, :id=>@next_id) %>"  data-icon="arrow-d" data-iconpos="right" data-role="button">&nbsp;</a>
      </div>
	</div>
		<div data-role="content"> 
			<div class="ui-grid-a"> 
						<div class="ui-block-a"><a href="<%= url_for :action => :phone_dialog, :id => @opportunity.object, :query =>{:origin => @params['origin']}%>" rel="external" data-role="button">Call</a></div> 
						<div class="ui-block-b"><a href="<%= url_for(:action => :status_update, :id => @opportunity.object, :query =>{:origin => @params['origin']})%>" rel="external" data-transition="none" data-role="button" data-icon="plus">Update</a></div> 
			</div> 
			<ul data-role="listview" data-theme="d" data-inset="true"> 
				<li>
					</br>
					<p class="ui-li-aside"><strong><%= @opportunity.cssi_statusdetail %></strong></br></p> 
				</li>
				<li>
					<h3><a href="<%= url_for(:controller => :Contact, :action => :show, :id => @contact.object, :query =>{:opportunity => @opportunity.object}) %>"><%= @contact.full_name %></a></h3> 
					<p><%= @contact.age_sex %></p> 
					<p><%= @contact.city_summary %></p> 
				</li> 
				<li><p><strong> Status Reason:	</strong> <%= @opportunity.statuscode %> </p></li> 
				<li><p><strong> Status Detail:	</strong> <%= @opportunity.cssi_statusdetail %> </p></li> 
				<li><p><strong> Source: 		</strong> <%= @opportunity.cssi_leadsourceid %> </li> 
				<li><p><strong> LOB: 			</strong> <%= @opportunity.cssi_lineofbusiness %></li>
				<li><p><strong> Lead Cost: 		</strong> <%= format_currency(@opportunity.cssi_leadcost.to_f, {}) %></li>  
				<li><p><strong> Created:		</strong> <%= to_datetime(@opportunity.createdon) %> </li> 
				<li><p><strong> Last Activity:	</strong> <%= @opportunity.last_activity_date %> </li> 
				<li><p><strong> Call Count: 	</strong> <%= @opportunity.phone_calls.size %> </li> 
			</ul>	

			<ul data-role="listview" data-filter="false" data-inset="true"> 
				<li data-role="list-divider">Appointments</li> 
				<% @opportunity.appointments.each do |appointment| %>
					<li> 
						<strong> <%= "#{to_datetime(appointment.scheduledstart)} - #{to_endtime(appointment.scheduledend)}" %> </strong>
								 <%= appointment.location %>
					</li> 
				<% end %>
				<% if @opportunity.appointments.size == 0 %>
					<li><div style="text-align:center"><i> (No Appointments) </i></div></li>
				<% end %>
			</ul>			
			<a href="<%= url_for(:action => :activity_summary, :id => @opportunity.object) %>" data-role="button" data-icon="arrow-r" rel="external" data-iconpos="right">Activity Summary</a> 
		</div>
</div>