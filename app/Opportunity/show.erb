<div class="pageTitle">
  <h1><%= @opportunity.status %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :index %>">Back</a>
  </div>
  <div class="rightItem regularButton">
    <a href="<%= url_for :action => :edit, :id => @opportunity.object %>">Edit</a>
  </div>
</div>

<div class="content">
  <ul>
    
        <li>
