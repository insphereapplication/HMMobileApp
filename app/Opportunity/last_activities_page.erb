<% if @params['page']=='0'%>
	<li id="todays-leads-header" data-role="list-divider" role="heading" tabindex="0" class="opportunity-item ui-li ui-li-divider ui-btn ui-bar-yellow ui-btn-up-undefined">By Last Activity</li>
<% end %>
<% @page.each do |opportunity| %>
	<%= render :partial =>"opportunity", :locals => { 
		   	:opportunity => opportunity, 
		    :color => 'yellow', 
		    :top_right_text => opportunity.cssi_statusdetail,
		    :bottom_right_text => (opportunity.cssi_lastactivitydate.blank? ? "" : "#{DateUtil.days_ago_relative(opportunity.cssi_lastactivitydate)}") ,
		    :origin => "follow-ups",
		    :launcher => :phone_dialog,
		    :icon => "phoneopp",
		    :location => "blank"
	   } if opportunity.contact 
	%>
<% end%>